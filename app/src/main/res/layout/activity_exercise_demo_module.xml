<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".exerciseDemoModule"
    android:background="@color/bgColorMain">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"


        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Exercise"
            android:textSize="43sp"
            android:fontFamily="@font/agbalumo"
            android:textColor="@color/txtColor"
            />
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@+id/toolbar">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            app:cardElevation="10dp"
            app:contentPadding="18dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="50dp"
            android:backgroundTint="@color/bgColorMainButtons"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/warmUp"
                android:textSize="25sp"
                android:fontFamily="@font/anton"
                android:textColor="@color/txtColor"
                />
            <ImageView
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:src="@mipmap/warmupimg"
                android:layout_gravity="end"
                />
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            app:cardElevation="10dp"
            app:contentPadding="18dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="50dp"
            android:backgroundTint="@color/bgColorMainButtons"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/workOut"
                android:textSize="25sp"
                android:fontFamily="@font/anton"
                android:textColor="@color/txtColor"
                />
            <ImageView
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:src="@mipmap/workout"
                android:layout_gravity="end"
                />
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            app:cardElevation="10dp"
            app:contentPadding="18dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="50dp"
            android:backgroundTint="@color/bgColorMainButtons"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Cooldown"
                android:textSize="25sp"
                android:fontFamily="@font/anton"
                android:textColor="@color/txtColor"
                />
            <ImageView
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:src="@mipmap/cooldown"
                android:layout_gravity="end"
                />
        </androidx.cardview.widget.CardView>
    </LinearLayout>





</RelativeLayout>